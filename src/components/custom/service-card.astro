---
import { Icon } from "astro-icon";
import { imageConfig } from "astro:assets";
const { title, epigraph, list, image } = Astro.props;
console.log(title);
---

<article
  class="group w-full flex flex-col border-2  shadow-sm rounded-md overflow-hidden hover:bg-purple-50/90 hover:border-purple-700 transition">
  <img
    src={image.src}
    alt={image.alt}
    class="w-full object-cover h-48  sm:h-44 md:h-40"
  />
  <div class="w-full px-3 pt-6 pb-3 flex flex-col justify-between h-full">
    <div>
      <p class="font-light text-lg mb-1 pl-1">{epigraph}</p>
      <h1 class="text-4xl font-bold mb-4">{title}</h1>
      <ul class="pl-2 mb-16">
        {
          list.map((item) => (
            <li class="flex gap-2 items-center mb-2">
              <Icon
                name="la:check-circle-solid"
                width="32px"
                class="text-sky-600"
              />
              {item}
            </li>
          ))
        }
      </ul>
    </div>
    <a
      class="text-lg md:text-xl text-purple-600 ring-2 ring-purple-400  group-hover:text-white px-5 rounded-md py-3  gap-1 group-hover:bg-purple-700  transition text-center"
      href="/contacto">
      Cotizar</a
    >
  </div>
</article>
