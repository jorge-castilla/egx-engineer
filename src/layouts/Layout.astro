---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import Analytics from "@vercel/analytics/astro";
import "@fontsource-variable/inter/index.css";
import "../styles/global.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title ? title + " | " + "EGX" : "EGX Ingeniería ";
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-KNHG53KX");
    </script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preload" as="image" href="/hero.jpg" />
    <link rel="preload" as="image" href="/logo.png" />
    <link rel="css" href="@fontsource-variable/inter/index.css" />
    <meta name="generator" content={Astro.generator} />
  </head>

  <SEO
    title={makeTitle}
    description="EGX Ingeniería ofrece servicios de instalaciones de gas, electricidad y sanitarias"
    nofollow={false}
    noindex={false}
    canonical={canonicalURL}
    openGraph={{
      basic: {
        url: canonicalURL,
        type: "website",
        title: `EGX - Ingeniería`,
        image: resolvedImageWithDomain,
      },
      image: {
        alt: "EGX Homepage Screenshot",
      },
    }}
    twitter={{
      creator: "@egxingenieria",
      site: "@egxingenieria",
      card: "summary_large_image",
    }}
  />

  <body class="selection:bg-purple-600 selection:text-fuchsia-50">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-KNHG53KX"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <div
      class="bg-purple-800 text-center text-white py-1 text-sm flex justify-center items-center gap-3 flex-col md:flex-row">
      <div>Trabajamos desde Santiago a Chillán</div>
      <div class="hidden md:block">|</div>
      <div>Diseño de proyectos: a todo Chile</div>
    </div>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
    <Analytics />
  </body>


</html>
